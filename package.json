{
  "name": "roxiler-systems-assignment",
  "version": "1.0.0",
  "description": "Full-stack store rating application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "setup": "node setup.js",
    "setup-db": "cd server && node scripts/setup-database.js"
  },
  "keywords": ["express", "react", "postgresql", "rating", "system"],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
